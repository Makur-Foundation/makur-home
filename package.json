{
  "name": "www.mercode.org",
  "version": "0.0.1",
  "description": "The https://mercode.org homepage",
  "main": "public/index.pug",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "parcel public/index.pug",
    "build": "rm -rf dist && parcel build public/index.pug && sed 's|\"/|\"https://mercode.org/|g' -i dist/portal.html",
    "update": "git pull && git clean -dxf && npm i && npm run build && rm -rf /var/www/mercode.org && mv dist /var/www/mercode.org"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mercode-org/www.mercode.org.git"
  },
  "keywords": [
    "mercode",
    "website"
  ],
  "author": "Various Authors",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/mercode-org/www.mercode.org/issues"
  },
  "homepage": "https://github.com/mercode-org/www.mercode.org#readme",
  "dependencies": {
    "fontawesome-4.7": "^4.7.0",
    "jquery": "^3.4.1",
    "parcel-bundler": "https://github.com/mkg20001/parcel/releases/download/middleware-backport/parcel-bundler-1.12.3.tgz",
    "parcel-plugin-google-fonts": "^0.1.3",
    "parcel-plugin-strip-index-html": "^0.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "pug": "^2.0.4"
  }
}
